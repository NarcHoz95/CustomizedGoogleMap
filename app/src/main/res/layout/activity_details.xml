<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/detailIconView"
        android:src="@mipmap/ic_launcher"
        android:contentDescription="@string/list_item_image_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        tools:text="@string/app_name"
        android:id="@+id/detailTitleView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@android:color/black"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/detailIconView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        tools:text="@string/app_name"
        android:id="@+id/detailLocView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/detailTitleView"
        app:layout_constraintStart_toStartOf="@id/detailTitleView"
        app:layout_constraintTop_toBottomOf="@id/detailTitleView"/>

    <TextView
        tools:text="@string/app_name"
        android:id="@+id/detailaddressView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="@id/detailLocView"
        app:layout_constraintStart_toStartOf="@id/detailLocView"
        app:layout_constraintTop_toBottomOf="@id/detailLocView"/>

    <TextView
        tools:text="@string/app_name"
        android:id="@+id/detailsRatingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryTrans"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/detailaddressView"
        app:layout_constraintTop_toBottomOf="@id/detailaddressView"/>

    <TextView
        android:id="@+id/navToMain"
        android:text="@string/nav_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="15dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:background="@color/colorLightBlue"
        app:layout_constraintTop_toBottomOf="@id/detailsRatingView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</android.support.constraint.ConstraintLayout>